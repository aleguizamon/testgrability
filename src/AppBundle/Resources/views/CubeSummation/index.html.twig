{% extends '::frontend.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            App.init({
                URL_SENDCASES: '{{ path('front_sendcases') }}'
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="header clearfix">
        <h3 class="text-muted">Prueba T&eacute;cnica - Grability</h3>
    </div>

    <div class="jumbotron">
        <h1>Cube Summation</h1>
    </div>

    <div id="mensaje"></div>

    <div class="row marketing">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Datos de Entrada</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-9">
                        <input name="cases" id="cases" type="number" id="disabledTextInput" class="form-control" placeholder="Cantidad de casos de prueba (T)" data-toggle="popover" data-placement="top" data-trigger="hover" title="Casos de Prueba (T)" data-content="Ingrese la cantidad de casos de prueba">
                    </div>
                    <div class="col-xs-3">
                        <button type="button" class="btn btn-primary btn-block" id="startBtn">Iniciar Prueba</button>
                    </div>
                </div>

                <div class="bs-callout bs-callout-danger" id="callout-buttons-ie-disabled">
                    <h4>Caso de prueba #1/5:</h4>

                    <p class="form-group">
                        <div class="row">
                            <div class="col-xs-5">
                                <input type="text" class="form-control" placeholder="Tamaño de la matriz (N)" data-toggle="popover" data-placement="top" data-trigger="hover" title="Tamaño de la matriz (N)" data-content="Ingrese el tamaño de la matriz NxNxN">
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" placeholder="Número de operaciones (M)" data-toggle="popover" data-placement="top" data-trigger="hover" title="Número de operaciones (M)" data-content="Ingrese el número de operaciones a realizar">
                            </div>
                            <div class="col-xs-2">
                                <button type="button" class="btn btn-primary btn-block" id="startOperation">Iniciar</button>
                            </div>
                        </div>
                    </p>

                    <div class="bs-callout bs-callout-warning" id="callout-buttons-ie-disabled">
                        <div style="width: auto;float: right;">
                            <label class="radio-inline">
                                <input type="radio" name="operation" id="opcUpdate" value="U"> Update
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="operation" id="opcQuery" value="Q"> Query
                            </label>
                        </div>
                        <h4 >Operación #1/8:</h4>
                        <p class="form-group">
                            <div class="row">
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" placeholder="X Y Z W" data-toggle="popover" data-placement="top" data-trigger="hover" title="Coordenadas" data-html="true" data-content="Separe cada coordenada con un espacio en blanco: X Y Z W">
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" class="btn btn-primary btn-block" id="updateBtn">Update</button>
                                </div>
                            </div>
                        </p>
                        <p class="form-group">
                            <div class="row">
                                <div class="col-xs-5">
                                    <input type="text" class="form-control" placeholder="X1 Y1 Z1" data-toggle="popover" data-placement="top" data-trigger="hover" title="Coordenada A" data-content="Separe cada coordenada con un espacio en blanco: X Y Z">
                                </div>
                                <div class="col-xs-5">
                                    <input type="text" class="form-control" placeholder="X2 Y2 Z2" data-toggle="popover" data-placement="top" data-trigger="hover" title="Coordenada B" data-content="Separe cada coordenada con un espacio en blanco: X Y Z">
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" class="btn btn-primary btn-block" id="queryBtn">Query</button>
                                </div>
                            </div>
                        </p>
                    </div>



                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Salida</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <colgroup>
                            <col class="col-xs-3">
                            <col class="col-xs-7">
                            <col class="col-xs-2">
                        </colgroup>
                        <thead>
                        <tr>
                            <th>Caso de Prueba</th>
                            <th>Operación</th>
                            <th>Resultado</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="text-center">#1</td>
                            <td >#1 - Update(1 1 1 4)</td>
                            <td class="text-center">2</td>
                        </tr>
                        <tr>
                            <td class="text-center">#1</td>
                            <td >#2 - Query(1 1 1 2 2 2)</td>
                            <td class="text-center">3</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal_msg" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body" style="overflow: auto;">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
</div>
{% endblock %}